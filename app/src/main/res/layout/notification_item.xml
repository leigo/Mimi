<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:onClick="clickOnSecret"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@null" />

    <TextView
        android:textSize="16.0sp"
        android:gravity="center"
        android:id="@id/num_new_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:drawablePadding="5.0dip"
        android:layout_alignBottom="@id/more" />

    <TextView
        android:textSize="16.0sp"
        android:gravity="center"
        android:id="@id/num_new_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:drawablePadding="5.0dip"
        android:layout_toRightOf="@id/num_new_comment"
        android:layout_alignBottom="@id/more" />

    <TextView
        android:textSize="12.0sp"
        android:id="@id/secret_content_text"
        android:padding="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@id/more"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="clickOnMore"
        android:contentDescription="@null" />

    <include layout="@layout/loading_reload" />

    <View
        android:id="@id/cover"
        android:background="@color/translucent"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@null" />
</RelativeLayout>