<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/phone_number_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edit_text_height">

        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/region"
            android:background="@drawable/textfield_default_holo_light"
            android:layout_width="95.0dip"
            android:layout_height="match_parent"
            android:onClick="clickOnRegion">

            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/green"
                android:gravity="center_horizontal"
                android:id="@+id/region_name"
                android:paddingRight="4.0dip"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="1.0" />

            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/green"
                android:id="@+id/region_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <EditText
            android:textSize="18.0sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:gravity="center"
            android:id="@+id/phone_number"
            android:background="@drawable/edit_text_subfield_holo_light"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/edit_hint_phone_number"
            android:inputType="phone" />
    </LinearLayout>

    <EditText
        android:textSize="18.0sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:gravity="center"
        android:id="@+id/password"
        android:background="@drawable/edit_text_holo_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_edit_text_height"
        android:hint="@string/edit_hint_password"
        android:inputType="textPassword" />

    <Button
        android:textSize="@dimen/single_button_text_size"
        android:textColor="@android:color/white"
        android:id="@+id/button"
        android:background="@drawable/dark_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_button_height"
        android:layout_marginTop="16.0dip"
        android:onClick="clickOnButton" />

    <TextView
        android:textSize="14.5sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forgot_password"
        android:padding="16.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:onClick="clickOnForgotPassword" />

    <TextView
        android:textSize="14.5sp"
        android:textColor="@android:color/darker_gray"
        android:layout_gravity="center_horizontal"
        android:id="@+id/protocol_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:text="@string/protocol_text"
        android:layout_weight="1.0" />

    <TextView
        android:textSize="14.5sp"
        android:textColor="@color/protocol_link"
        android:layout_gravity="center_horizontal"
        android:id="@+id/protocol_link"
        android:padding="20.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/protocol_link"
        android:onClick="clickOnProtocol" />
</LinearLayout>